{
  "manifest_version": 2,

  "name": "mailTo Killer",
  "description": "This extension helps you copy the email address of mailto link in every website",
  "version": "2.0",

  "browser_action": {
   "icons": {"256": "logo.png",
             "128": "logo128.png"
            },
    "default_icon": "logo.png"
  },
  "permissions": [
   "activeTab"
   ],
   "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
]

}